@model IEnumerable<Gestion_de_etudiant.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h1>List of schools</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolAdress)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.SchoolID" class="btn btn-outline-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SchoolID" class="btn btn-outline-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SchoolID" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
